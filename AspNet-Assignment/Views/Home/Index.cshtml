<div class="container mt-5">
    @if(SignInManager.IsSignedIn(User))
    {
        <div>Welcome @User.Identity?.Name</div>
        <a asp-action="Index" asp-controller="Logout">Logout</a>
    }
    else
    {
        <a asp-action="Index" asp-controller="register">Click here to register</a><br />

        <a asp-action="Index" asp-controller="login">Click here to login</a>

    }
</div>
